            </div>
        </div>
        <ul class="links-container">

            <li class="link-item">@Html.ActionLink("Home", "Index", "Home", new { @class = "link " })
            <li class="link-item">@Html.ActionLink("SignIn/SignUp", "Register", "Home", new { @class = "link active" })
            <li class="link-item">@Html.ActionLink("Contact", "Contact", "Home", new { @class = "link" })
            <li class="link-item">@Html.ActionLink("About Us", "About", "Home", new { @class = "link" })
        </ul>
    </nav>
    <br>
    <br>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <div class="cont">
        <div class="form sign-in">
            <h6>Welcome</h6>

            @using (Html.BeginForm("Login", "Home", FormMethod.Get))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form action="" method="GET">
                    <label>
                        <span>Email</span>
                        @Html.EditorFor(model => model.userEmail, new { htmlAttributes = new { @placeholder = "Enter Name" } })
                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                    </label>
                    <label>
                        <span>Password</span>
                        <input type="password" placeholder="Your Password" id="userPassword" required autocomplete="off" />
                    </label>
                    <p class="forgot-pass"><a href="notFoundPage.html">Forgot password?</a></p>
                    <button type="submit" class="submit" id="loginSumbit">Sign In</button>
                </form>
            }
        </div>
        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">

                    <h3>Don't have an account? Please Sign up!<h3>
                </div>
                <div class="img__text m--in">

                    <h3>If you already have an account, Please sign in.<h3>
                </div>
                <div class="img__btn">
                    <span class="m--up">Sign Up</span>
                    <span class="m--in">Sign In</span>
                </div>
            </div>
            <div class="form sign-up">
                @*<small class="errorMesg" id="errorMesg">Please Fill All the Required Field</small>
                    <small class="successMesg" id="successMesg">Successfully Registered</small>*@
                <h6>Create your Account</h6>
                @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form action="index.html" method="get">
                        <label>
                            <span>Name</span>
                            @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @placeholder = "Enter Your Name" } })
                            @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                        </label>
                        <label>
                            <span>Email</span>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @placeholder = "Enter Your Email" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </label>
                        <label>
                            <span>Phone Number</span>
                            <input type="text" id="phoneNum" name="phoneNumber" placeholder="Your Phone Number" required autocomplete="off" />
                        </label>
                        <label>
                            <span>Password</span>
                            <input type="password" id="userRegPassword" name="password" placeholder="Your Password" required autocomplete="off" />
                        </label>
                        <label>
                            <span>Confirm Password</span>
                            <input type="password" id="C_userPassword" name="C_password" placeholder="Retype Your Password" required autocomplete="off" />
                        </label>
                        <button type="button" class="submit" id="submitButton">Register</button>
                    </form>
                }
                </div>
            </div>
        </div>
        <script>
            document.querySelector('.img__btn').addEventListener('click', function () {
                document.querySelector('.cont').classList.toggle('s--signup');
            });
        </script>


