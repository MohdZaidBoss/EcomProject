    <nav class="navbar">
        <div class="nav">
            <a href="index.html"><img src="Images/web_logo.jpg" class="brand-logo" alt=""></a>
            <div class="nav-items">
                <div class="search">
                    <input type="text" class="search-box" placeholder="search brand, product">
